  ],
  "outputs": {
    "managementPublicDNSName": {
      "value": "[variables('managementDNSName')]",
      "type": "string"
    },
    "runtimePublicDNSName": {
      "value": "[variables('runtimePublicDNSName')]",
      "type": "string"
    },
    "managementUI": {
      "value": "[concat('http://', variables('managementPublicIPDNSName'), '.', tolower(replace(parameters('location'),' ','')), '.cloudapp.azure.com', ':9000')]",
      "type": "string"
    }
  }
}